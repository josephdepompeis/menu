<p id="notice"><%= notice %></p>

<h1>Listing Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Description</th>
      <th>Name</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.price %></td>
        <td><%= dish.description %></td>
        <td><%= dish.name %></td>
        <td><%= dish.course_id %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<table>
  <thead>
    <tr>
      <th>Price: </th>
      <th>Number:</th>
      <th>Name</th>
      <th>Contains</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <% prices = [] %>
        <% dishes = [] %>
        <% @dishes.each do |dish| %>
        <% if dish.course_id == course.id %>
        <% dishes << dish.name %>
        <% prices << dish.price %>
        <%end %>
        <%end %>
        <td><%= prices.sum %></td>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= dishes.*", " %>
        <td><%= image_tag  asset_url(course.image), class: "small" %><td>




          </td>
      </tr>
    <% end %>
  </tbody>
</table>







